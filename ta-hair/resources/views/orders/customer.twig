<h4>Customer Details</h4>
<form action="">
	<div class="form-group">
		<label>Name</label>
		<input type="text" class="form-control" value="{{ order.user.name }}" />
	</div>
	<div class="form-group">
		<label>Email</label>
		<input type="text" class="form-control" value="{{ order.user.email }}" />
	</div>
	<div class="form-group">
		<label>Phone</label>
		<input type="text" class="form-control" value="{{ order.user.phone }}" />
	</div>
	<div class="form-group">
		<label>User Since</label>
		<input type="text" class="form-control" value="{{ order.user.created_at }}" />
	</div>
</form>
