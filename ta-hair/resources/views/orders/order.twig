<h4>Order Details</h4>
<div class="row">
	<div class="col-md-6">
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>#</th>
					<th>Item</th>
					<th>Qty</th>
					<th>Rate</th>
					<th>Total</th>
				</tr>
			</thead>
			<tbody>
				{% set total = 0 %}
				{% for product in order.products %}
				<tr>
					<td>{{ product.id }}</td>
					<td>{{ product.name }}</td>
					<td>{{ product.pivot.qty }}</td>
					<td>{{ product.pivot.price }}</td>
					<td>
						{% set total = total + ( product.pivot.qty * product.pivot.price ) %}
						{{ product.pivot.qty * product.pivot.price }}
					</td>
				</tr>
				{% endfor %}
			</tbody>
			<tfoot>
				<tr>
					<th colspan="4">Grand Total</th>
					<th>${{ total }}</th>
				</tr>
			</tfoot>
		</table>
	</div>
</div>
